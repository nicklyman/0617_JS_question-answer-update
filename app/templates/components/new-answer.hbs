<!-- Form for answering new answer -->
<!-- Accessed from question.hbs page -->
<!-- Child of answer.hbs -->

{{#if addNewAnswer}}
  <!-- New answer form displayed on question.hbs template -->
  <h3>New Answer</h3>
    <div>
      <form>
        <div class="form-group">
          <label for="answer">Answer</label>
          {{textarea value=answer id="answer" rows=5 class="form-control"}}
        </div>

        <div class="form-group">
          <label for="answerer">Author</label>
          {{input value=answerer id="answerer"}}
        </div>

        <button class="btn btn-primary btn-xs" {{action 'save'}}>Save</button>
      </form>
    </div>
{{else}}
  <button class="btn btn-success btn-xs" {{action 'answerFormShow'}}>Add Your Answer</button>
{{/if}}
