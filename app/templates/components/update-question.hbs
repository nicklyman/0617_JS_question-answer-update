<!-- Displays update question form when text is clicked -->
<!-- Child of question.hbs -->
<!-- Displayed on question.hbs page -->

{{#if updateQuestionForm}}
  <h3>Update Question</h3>
  <div>
    <form>
      <div class="form-group">
        <label for="question">Question</label>
        {{textarea value=question.question id="question" rows=5 class="form-control"}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=question.author id="author"}}
      </div>

      <div class="form-group">
        <label for="notes">Additional Information</label>
        {{textarea value=question.notes id="notes" rows=3 class="form-control"}}
      </div>

      <button class="btn btn-warning btn-xs" {{action 'update' question}}>Save Changes</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-warning btn-xs" {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
